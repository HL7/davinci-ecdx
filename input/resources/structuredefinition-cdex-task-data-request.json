                "type": [
                    {
                        "code": "Reference",
                        "targetProfile": [
                            "http://hl7.org/fhir/StructureDefinition/Claim",
                            "http://hl7.org/fhir/us/davinci-hrex/StructureDefinition/hrex-coverage"
                        ]
                    }
                ],
                "mustSupport": true
