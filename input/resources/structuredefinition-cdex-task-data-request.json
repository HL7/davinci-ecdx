                "binding": {
                    "strength": "extensible",
                    "valueSet": "http://hl7.org/fhir/us/davinci-cdex/ValueSet/cdex-POU"
                },
                "mustSupport": true
            },
            {
                "id": "Task.input:payer-url",
                "path": "Task.input",
                "sliceName": "payer-url",
