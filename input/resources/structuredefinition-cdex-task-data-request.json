            {
                "id": "Task.input:payer-url.value[x]",
                "path": "Task.input.value[x]",
                "short": "Payer url value",
                "type": [
                    {
                        "code": "url"
                    }
                ],
                "mustSupport": true
            },
            {
                "id": "Task.input:multiple-submits",
                "path": "Task.input",
                "sliceName": "multiple-submits",
