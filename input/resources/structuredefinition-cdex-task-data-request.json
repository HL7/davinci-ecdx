            },
            {
                "id": "Task.input:multiple-submits.value[x]",
                "path": "Task.input.value[x]",
                "short": "Multiple submits flag value",
                "type": [
                    {
                        "code": "boolean"
                    }
                ]
            }
        ]
    }
}